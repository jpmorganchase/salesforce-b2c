{
    "root": true,
    "extends": "airbnb-base/legacy",
    "env": {
        "es6": true
    },
    "globals": {
        "session": "readonly",
        "request": "readonly",
        "customer": "readonly",
        "empty": "readonly",
        "response": "readonly",
        "document": "readonly",
        "window": "readonly",
        "jQuery": "readonly",
        "describe": "readonly",
        "it": "readonly",
        "$": "readonly"
    },
    "rules": {
        "import/no-unresolved": "off",
        "indent": ["error", 4, { "SwitchCase": 1, "VariableDeclarator": 1 }],
        "func-names": "off",
        "require-jsdoc": "error",
        "valid-jsdoc": ["error", { "preferType": { "Boolean": "boolean", "Number": "number", "object": "Object", "String": "string" }, "requireReturn": false}],
        "vars-on-top": "off",
        "global-require": "off",
        "no-shadow": ["error", { "allow": ["err", "callback"]}],
        "max-len": "off",
        "no-console": "off"
    }
}
